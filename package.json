{
  "name": "watchtogether2",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "build:css": "cp node_modules/tailwindcss/index.css dist/styles.css",
    "build:js": "esbuild src/main.ts --bundle --platform=node --outfile=dist/main.js --external:electron && esbuild src/renderer.tsx --bundle --platform=browser --outfile=dist/renderer.js --jsx=automatic --jsx-factory=h --jsx-fragment=Fragment --alias:react=preact/compat --alias:react-dom=preact/compat",
    "build": "npm run build:css && npm run build:js",
    "start": "npm run build && npx electron .",
    "dev": "npm run build && NODE_ENV=development npx electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@preact/compat": "^18.3.1",
    "electron": "^37.2.0",
    "preact": "^10.26.9"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "@types/node": "^24.0.10",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.24.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3"
  }
